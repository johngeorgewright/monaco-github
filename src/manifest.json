{
  "name": "Monaco GitHub Editor",
  "description": "Use Monaco as your GitHub editor",
  "version": "1.0",
  "manifest_version": 3,
  "content_scripts": [
    {
      "matches": [
        "https://github.com/*"
      ],
      "js": [
        "edit-button.js"
      ]
    }
  ],
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "action": {
    "default_popup": "editor.html"
  }
}